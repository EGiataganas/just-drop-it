<h1>Listing Resources</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Filename</th>
        <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td> <a class="btn btn-primary" href="<%=resource.file%>" download> Download </a> </td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resource', new_resource_path, class: "btn btn-success" %>
